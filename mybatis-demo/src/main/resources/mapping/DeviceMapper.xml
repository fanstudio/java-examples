<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.rog//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fanstudio.mybatisdemo.mapper">
    <resultMap id="device" type="Device">
        <id property="id" column="id" />
        <result property="serviceName" column="service_name" />
        <result property="description" column="description" />
        <result property="ipAddress" column="ip_address" />
        <result property="portType" column="port_type" />
        <result property="port" column="port" />
    </resultMap>

    <select id="selectByPrimaryKey" parameterType="int" resultMap="device">
        SELECT `id`,`service_name`,`description`,`ip_address`,`port_type`,`port` FROM `t_device` WHERE `id`=#{id}
    </select>
</mapper>